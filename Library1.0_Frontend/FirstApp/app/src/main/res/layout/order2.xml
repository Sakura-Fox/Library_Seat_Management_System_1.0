<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/orderFace2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grey">

    <TextView
        android:id="@+id/yd2_title"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginTop="184dp"
        android:text="座位预定 志愿二"
        android:textColor="#FFFFF0"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/yd2_spinner1"
        android:layout_width="188dp"
        android:layout_height="34dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:textColor="#FFFFF0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yd2_title"
        app:layout_constraintVertical_bias="0.16000003" />

    <TextView
        android:id="@+id/yd2_text1"
        android:layout_width="121dp"
        android:layout_height="34dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="座位类型"
        android:textColor="#FFFFF0"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/yd2_spinner1"
        app:layout_constraintHorizontal_bias="0.67"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yd2_title"
        app:layout_constraintVertical_bias="0.16000003" />

    <TextView
        android:id="@+id/yd2_text2"
        android:layout_width="120dp"
        android:layout_height="34dp"
        android:layout_marginTop="60dp"
        android:text="区域类型"
        android:textSize="24sp"
        android:textColor="#FFFFF0"
        app:layout_constraintEnd_toEndOf="@+id/yd2_text1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/yd2_text1"
        app:layout_constraintTop_toBottomOf="@+id/yd2_text1" />

    <Spinner
        android:id="@+id/yd2_spinner2"
        android:layout_width="188dp"
        android:layout_height="34dp"
        android:textColor="#FFFFF0"
        app:layout_constraintBottom_toBottomOf="@+id/yd2_text2"
        app:layout_constraintEnd_toEndOf="@+id/yd2_spinner1"
        app:layout_constraintStart_toStartOf="@+id/yd2_spinner1"
        app:layout_constraintTop_toTopOf="@+id/yd2_text2" />

    <Button
        android:id="@+id/yd2_button"
        android:layout_width="102dp"
        android:layout_height="63dp"
        android:text="预定"
        android:textSize="24sp"
        android:background="#FFE4E1"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yd2_spinner2"
        app:layout_constraintVertical_bias="0.44" />
</androidx.constraintlayout.widget.ConstraintLayout>