<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grey">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp">

        <TextView
            android:id="@+id/tx_orginPassword"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="原密码"
            android:textSize="40sp"
            android:textColor="#fffff0">

        </TextView>

        <EditText
            android:id="@+id/Edit_orginPassword"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="#fffff0"
            android:layout_toEndOf="@id/tx_orginPassword"
            android:layout_toRightOf="@id/tx_orginPassword"
            android:hint="请输入当前密码"
            android:textColorHint="#fffff0">

        </EditText>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp">

        <TextView
            android:id="@+id/tx_newPassword"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="新密码"
            android:textSize="40sp"
            android:textColor="#fffff0">
        </TextView>

        <EditText
            android:id="@+id/Edit_newPassword"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="#fffff0"
            android:layout_toEndOf="@id/tx_newPassword"
            android:layout_toRightOf="@id/tx_newPassword"
            android:hint="请输入新的密码"
            android:textColorHint="#fffff0">
        </EditText>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="50dp">
        <TextView
            android:id="@+id/tx_repeatPassword"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="重复新密码"
            android:textSize="40sp"
            android:textColor="#fffff0">
        </TextView>
        <EditText
            android:id="@+id/Edit_repeatPassword"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="#fffff0"
            android:layout_toEndOf="@id/tx_repeatPassword"
            android:layout_toRightOf="@id/tx_repeatPassword"
            android:hint="请输入新的密码"
            android:textColorHint="#fffff0">
        </EditText>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp">
        <Button
            android:id="@+id/btn_changePwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认">
        </Button>
    </LinearLayout>
</LinearLayout>